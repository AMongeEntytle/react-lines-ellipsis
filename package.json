{
  "name": "react-lines-ellipsis",
  "version": "0.3.0",
  "description": "Simple multiline ellipsis component for React.JS",
  "main": "bundle.js",
  "files": [
    "bundle.js"
  ],
  "scripts": {
    "test": "standard",
    "build": "babel index.js > bundle.js",
    "docs": "browserify -e docs/app.js -t babelify > docs/app.bundle.js",
    "docs:watch": "watchify -e docs/app.js -t babelify -o docs/app.bundle.js",
    "prepublish": "npm run build"
  },
  "keywords": [
    "react",
    "multiline",
    "ellipsis",
    "clamp"
  ],
  "author": "xiaody",
  "license": "MIT",
  "repository": "xiaody/react-lines-ellipsis",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "standard": "8.6.0",
    "watchify": "^3.7.0"
  },
  "standard": {
    "ignore": [
      "docs/*.bundle.js"
    ]
  }
}
