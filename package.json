{
  "name": "react-lines-ellipsis",
  "version": "0.5.7",
  "description": "Simple multiline ellipsis component for React.JS",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "standard",
    "prebuild": "mkdir -p lib",
    "build": "babel src/common.js > lib/common.js && babel src/index.js > lib/index.js && babel src/html.js > lib/html.js",
    "docs": "browserify -e docs/app.js | uglifyjs -m > docs/app.bundle.js",
    "docs:watch": "watchify -e docs/app.js -o docs/app.bundle.js",
    "prepublish": "npm run build"
  },
  "keywords": [
    "react",
    "react-component",
    "multiline",
    "ellipsis",
    "dotdotdot",
    "clamp",
    "read-more"
  ],
  "author": "xiaody",
  "license": "MIT",
  "repository": "xiaody/react-lines-ellipsis",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "aliasify": "2.1.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-es2015-modules-umd": "6.18.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "core-js": "2.4.1",
    "lodash": "4.17.2",
    "preact": "7.1.0",
    "preact-compat": "3.9.3",
    "raf": "3.3.0",
    "standard": "8.6.0",
    "uglifyjs": "2.4.10",
    "watchify": "^3.7.0"
  },
  "standard": {
    "ignore": [
      "lib",
      "docs/*.bundle.js"
    ]
  },
  "browserify": {
    "transform": [
      "babelify",
      "aliasify"
    ]
  },
  "aliasify": {
    "aliases": {
      "react": "preact-compat"
    }
  }
}
